<form class="col s12" method="post" action="permisos">
    <input id="usuarioid2" type="hidden" class="validate" name="usuarioid" value="<%= usuario.id %>">
    <div class="row">
        <div class="input-field col s8">
            <select multiple name="permisos">
                <option value="" disabled selected>Selecciona las puertas autorizadas</option>
                <% if(puertas != null){ %>
                    <% for(var i = 0; i < puertas.length; i++){ %>

                        <% if(usuario.permisos != null) { %>
                            <% if(usuario.permisos[puertas[i].id] == "si"){ %>
                                <option selected value="<%= puertas[i].id %>"><%= puertas[i].id %></option>
                            <% }else{ %>
                                <option value="<%= puertas[i].id %>"><%= puertas[i].id %></option>
                            <% } %>
                        <% }else{ %>
                            <option value="<%= puertas[i].id %>"><%= puertas[i].id %></option>
                        <% } %>

                    <% } %>
                <% } %>
            </select>
            <label>Puertas permitidas</label>
        </div>
        <div class="input-field col s4">
            <% if(usuario.paneladmin != null) { %>
                <% if(usuario.paneladmin){ %>
                    <input type="checkbox" id="paneladmin" name="paneladmin" checked="checked">
                    <label for="paneladmin">Administrador del sistema</label>
                <% }else{ %>
                    <input type="checkbox" id="paneladmin" name="paneladmin">
                    <label for="paneladmin">Administrador del sistema</label>
                <% } %>
            <% } %>
        </div>
    </div>
    <div class="row">
        <button class="btn waves-effect waves-light" type="submit">Modificar permisos
            <i class="material-icons right">send</i>
        </button>
    </div>
</form>

<script>
$(document).ready(function(){
    $('select').material_select();
});
</script>
